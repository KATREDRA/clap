<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
>
<SelectDialog contentHeight="60%" showClearButton="true" title="Select Division" class="sapUiPopupWithPadding"
		items="{path:'/ZDD_DIVISION_VH'}" search="handleValueHelpDivisionSearch"
		confirm="handleValueHelpDivisionConfirm" cancel="handleValueHelpDivisionClose" multiSelect="false">
		<StandardListItem title="{Division}" description="{DivisionText}"/>
	</SelectDialog>
</c:FragmentDefinition>